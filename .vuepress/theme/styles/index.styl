@import url('https://fonts.googleapis.com/css?family=Overpass+Mono:300,400,600|Overpass:300,300i,400,400i,600,600i&subset=latin-ext');

body {
    margin: 0;
    padding: 0;
    font-family: Overpass, sans-serif;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    color: #333;
}

p {
    font-weight: 100;
    line-height: 1.5;
    font-size: 1.125em;
}

.theme-container {
    position: relative;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-end;
    width: 100%;
}

.boxed {
    margin: 0 1rem;
}

.content {
    position: relative;
    z-index: 2;
}

.content img {
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
}


/* 640px */
@media screen and (min-width: 40em) {
    .boxed {
        margin-left: 8.3334%;
        /* 1/12 */
        margin-right: 8.3334%; 
    }
}

/* 960px */
@media screen and (min-width: 60em) {
    .boxed {
        margin-left: 11.1112%;
        /* 1/9 */
        margin-right: 11.1112%; 
    }
}

/* 1280px */
@media screen and (min-width: 80em) {
    .boxed {
        margin-left: 16.66667%;
        /* 1/6 */
        margin-right: 16.66667%; 
    }
}

/* 1600px */
@media screen and (min-width: 100em) {
    .boxed {
        margin-left: 20%;
        /* 1/5 */
        margin-right: 20%; 
    }
}